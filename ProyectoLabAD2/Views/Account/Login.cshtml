@using ProyectoLabAD2.Models
@{
@model LoginViewModel
    ViewBag.Title = "Iniciar Sesion";
}

<h2>@ViewBag.Title</h2>

<form class="form-horizontal" method="POST" action="/Cuenta/Login">
    <h4>Ingresa tus credenciales para iniciar sesion1.</h4>
    <hr />
    <div class="form-group">
        <label class="col-md-2 control-label">Numero de Cuenta:</label>
        <div class="col-md-10">
            <input type="number" class="form-control" name="numerocuenta" required>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Contraseña:</label>
        <div class="col-md-10">
            <input type="password" class="form-control" name="password" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Login" />
        </div>
    </div>
    <div>
        <div class="col-md-offset-2 col-md-10">
            <p>
                @Html.ActionLink("Registrarme", "Register")
            </p>
        </div>
    </div>
</form>
