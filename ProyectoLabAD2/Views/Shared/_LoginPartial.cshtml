@{
    String datos =null;
    if (Session["nombre"]!=null && Session["cuenta"]!=null) {
        String nombre = Session["nombre"].ToString();
        String cuenta = Session["cuenta"].ToString();
        datos = nombre + " - " + cuenta;
    }
}
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @if (datos != null)
        {
            <li>@Html.ActionLink(@datos, "Profile", "Cuenta", routeValues: null, htmlAttributes: new { id = "profileLink" })</li>
        }
        @if (datos == null)
        {
            <li>@Html.ActionLink("Registrar", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li>@Html.ActionLink("Iniciar Sesion", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        }
        else
        {
            <li>@Html.ActionLink("Cerrar Sesion", "Logout", "Cuenta", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        }
    </ul>
}
